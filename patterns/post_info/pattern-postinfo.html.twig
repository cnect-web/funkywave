{#
/**
 * @file
 * post info pattern.
 */
#}
<div class="post-info post-info--group clearfix">
  <div class="post-info__ilustration">
  {# link to the user profile wrapped around the user image #}
    {% if logged_in %} 
      <a href="{{ profile_uri }}" class="post-info__link post-info__link--account">{{ author_pic }}</a>
    {% else %} 
      {{ author_pic }}
    {% endif %}
    {% if group_url %}
      <a href="{{ group_url }}" class="post-info__link post-info__link--group">{{ group_logo }}</a>
    {% endif %} 
  </div>
  <div class="post-info__details">
    <h4 class="post-info__author">
    {% trans %} by {% endtrans %}
    {% if logged_in %}   
      <a href="{{ profile_uri }}" class="post-info__link post-info__account-link">{{profile_name}}</a>
    {% else %} 
       {{ profile_name }} 
    {% endif %}      
    </h4>
    <p class="post-info__metadata">{% trans %} Posted {{ creation_date }} in <a href="{{ group_url }}" class="post-info__link post-info__group-link">{{ group_name }}</a> {% endtrans %}</p>
  </div>
</div>
