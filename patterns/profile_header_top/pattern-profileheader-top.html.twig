#}
{% if profile_uri %}
  <a href="{{ profile_uri }}" class="profile__pic__link">
{% endif %}
    {% if profile_pic_uri %}
      <img src="{{ profile_pic_uri }}" class="profile__pic" alt="{{ profile_title }}" />
    {% endif %}
{% if profile_uri %}
  </a>
{% endif %}
    
{% if profile_title %}  
  <h2 class="profile__title"><a href="{{ profile_uri }}">{{ profile_title }}</a></h2>
{% endif %}

{% if profile_uri_more %}
  <a href="{{ profile_uri_more }}" class="profile__link--about">
      {% trans %} Learn more {% endtrans %}<span class="sr-only">{% trans %} about {% endtrans %}{{ profile_title }}</span> <i class="fas fa-chevron-right"></i>
  </a>
{% endif %}

{% if profile_uri_back %}
  <a href="{{ profile_uri_back }}" class="profile__link--about">
    <i class="fas fa-chevron-left"></i> {% trans %}Back to page {% endtrans %}<span class="sr-only">{% trans %} of {% endtrans %} {{ profile_title }}</span>
  </a>
{% endif %}

{% if profile_location %}
  <ul class="profile__location">
    <li>
      <svg class="svg-inline--fa fa-map-marker-alt fa-w-12" aria-hidden="true" data-prefix="fas" data-icon="map-marker-alt" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" data-fa-i2svg=""><path fill="currentColor" d="M172.268 501.67C26.97 291.031 0 269.413 0 192 0 85.961 85.961 0 192 0s192 85.961 192 192c0 77.413-26.97 99.031-172.268 309.67-9.535 13.774-29.93 13.773-39.464 0zM192 272c44.183 0 80-35.817 80-80s-35.817-80-80-80-80 35.817-80 80 35.817 80 80 80z"></path></svg> {{ profile_location }}
    </li>
  </ul>
{% endif %}